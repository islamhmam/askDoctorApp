<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:backgroundTint="@color/packet_color_2"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/covid_19_countries_design_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/covid_19_countries_design_tv_new_infected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/passero_one"
            android:text="Total Infected : "
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintStart_toEndOf="@+id/covid_19_countries_design_iv"
            app:layout_constraintTop_toBottomOf="@id/covid_19_countries_design_tv_country_Name" />

        <TextView
            android:id="@+id/covid_19_countries_design_tv_new_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/aldrich"
            android:text="Total Death : "
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/covid_19_countries_design_iv"
            app:layout_constraintTop_toBottomOf="@id/covid_19_countries_design_tv_new_infected" />

        <TextView
            android:id="@+id/covid_19_countries_design_tv_new_infected2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/aldrich"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/covid_19_countries_design_tv_new_infected"
            app:layout_constraintTop_toBottomOf="@id/covid_19_countries_design_tv_country_Name" />

        <TextView
            android:id="@+id/covid_19_countries_design_tv_new_death2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/passero_one"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/covid_19_countries_design_tv_new_death"
            app:layout_constraintTop_toBottomOf="@+id/covid_19_countries_design_tv_new_infected2" />

        <TextView
            android:gravity="center"
            android:id="@+id/covid_19_countries_design_tv_country_Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/artifika"
            android:maxLines="2"
            android:text="Country Name"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/covid_19_countries_design_tv_new_infected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/covid_19_countries_design_iv"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>